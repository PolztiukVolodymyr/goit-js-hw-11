{{#each this}}
<a class="gallery__link" href="{{largeImageURL}}">
 <div class="gallery__item">
  <img src="{{webformatURL}}" alt="{{tags}}" loading="lazy" class="gallery__image"/>
   <div class="info">
     <p class="info-item">
       <b class="info-item__name">Likes <span class="info-item__value">{{likes}}</span></b>
      </p>
     <p class="info-item">
        <b class="info-item__name">Views <span class="info-item__value">{{views}}</span></b>
      </p>
      <p class="info-item">
        <b class="info-item__name">Comments <span class="info-item__value">{{comments}}</span></b>
      </p>
      <p class="info-item">
       <b class="info-item__name">Downloads <span class="info-item__value">{{downloads}}</span></b>
    </p>
   </div>
 </div>
</a>
{{/each}}
